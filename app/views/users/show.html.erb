<% provide(:title, "Profile") %>

<h1 class="section-title">User profile page:</h1>
<hr>
<div class="row">
  <p>Your current user info is:</p>
  <table class="table table-hover table-striped table-responsive">
    <thead>
      <tr>
        <td>#ID</td>
        <td>Username</td>
        <td>E-mail</td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.id %></td>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
</div>
